<!DOCTYPE html>
<html><head>
  <link rel="stylesheet" href="/style.css">
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap');
      body {
        font-family: 'Space Grotesk', monospace;
        background-color: #0a0a1a;
        color: #e0e0e0;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-color: #FFFFFF;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .stars {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
      }
    </style>
    <title><%= locals.title ? title : "Spaceguy" %></title>
    
    </head>
    <body>
      
      <svg class="stars" xmlns="http://www.w3.org/2000/svg">
        <rect width="100%" height="100%" fill="#111111"/>
        <g id="stars"></g>
      </svg>
      
      <%- body %>
      
      <script>
        const starsSvg = document.querySelector(".stars #stars");
        for (let i = 0; i < 100; i++) {
          const star = document.createElementNS("http://www.w3.org/2000/svg", "circle");
          star.setAttribute("cx", Math.random() * 100 + "%");
          star.setAttribute("cy", Math.random() * 100 + "%");
          star.setAttribute("r", Math.random() * 2);
          star.setAttribute("fill", "#ffffff");
          
          const animate = document.createElementNS("http://www.w3.org/2000/svg", "animate");
          animate.setAttribute("attributeName", "opacity");
          animate.setAttribute("dur", (Math.random() * 3 + 1) + "s");
          animate.setAttribute("values", "0;1;0");
          animate.setAttribute("repeatCount", "indefinite");
          
          star.appendChild(animate);
          starsSvg.appendChild(star);
        }
      </script>
    </body></html>