    .mid-part{
        display: flex;
        gap: 2.5vw;
        /* margin-right: 2vw; */
    }
    .btn{
        transition: 0.3s;
    }
    .btn:hover{
        color: #fd532f;
    }
    ::-webkit-scrollbar {
        width: 5px;
    }
    ::-webkit-scrollbar-track {
        background: #000;
    }
    ::-webkit-scrollbar-thumb {
        border-radius: 10px;
        background: #545454;
    }
    .cursor {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: #fd532f;
        mix-blend-mode: difference;
        position: fixed;
        z-index: 999;
        pointer-events: none;
        transition: opacity .4s;
        top: -30px;
        left: -30px;
    }

    .cursor-f {
        position: fixed;
        border-radius: 50%;
        border: 1px dashed #fd532f;
        width: 30px;
        height: 30px;
        pointer-events: none;
        animation: spin 2.6s linear infinite paused;
        transition: background-color .3s;
    }

    .cursor.clicked .cursor-f {
        background-color: rgba(234, 227, 207, 0.12);
    }

    .cursor.hidden {
        opacity: 0;
    }

</style>
