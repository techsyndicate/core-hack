<% layout('layout') -%>
    <style>
        body {
            display: flex;
            height: 100vh;
            flex-direction: column;
            align-items: center;
        }

        #main {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
        }

        #main form {
            width: 100%;
            margin: 3vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 1vmin;
        }

        form button {
            color: #111;
            background-color: #fd532f;
            padding: 1.5vmin 2vmin;
            border-radius: 5px;
            font-size: 3vh;
            font-weight: bold;
            border: none;
        }

        p {
            color: #818080;
            text-align: center;
            width: 90%;
        }

        h1 {
            color: #fd532f;
        }

        button {
            padding: 1vmin;
            background-color: #fd532f;
            border-radius: 10px;
            color: black;
            border: none;
            font-weight: bold;
        }
/* 
        #code {
            font-size: 5vh;
        } */

        #content {
            width: 30vw;
            background-color: #111;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            font-size: 3vh;
        }
    </style>
    <%- include ./components/navLanding %>

    <% if (userdata.hasPlan===true) { %>
        <div id="main">
                <div id="content">

                    Here's your agency pass code. <span style="color: #fd532f;">Keep it secret</span> and share only with
                    your spaceguys.
                    <div>
                        <pre id="code"><%= userdata.userid %></pre>
                    </div>
                </div>
            </div>
            <% } %>

        <% if (userdata.hasPlan===false) { %>
            <div id="main">
                <h1>Buy Agency Pass</h1>
                <form action="/agency/buy" method="post">
                    <p style="color: #ffffff;">Buy a pass for your spaceguy to use as proof of employment. This provides
                        your spaceguy with
                        access to all the features we have to offer.</p>
                    <button>Buy a pass</button>
                    <p>
                        Already have a pass from your agency? <br>
                        <a href="/spaceguy/code">Enter it here.</a>
                    </p>
                </form>

            </div>
            <% } %>
                </div>