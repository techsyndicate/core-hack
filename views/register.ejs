<% layout('layout') -%>
    <style>
        body{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        #main {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;

            border-radius: 20px;
            border: 1px solid #545454;
            margin-top: 10vh;
            width: 60vh;
            padding: 1vmin;
            
        }
        
        #main form {
            width: 100%;
            margin: 3vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 1vmin;
        }

        form input {
            background-color: transparent;
            padding: 10px;
            border: 1px solid #545454;
            font-size: 1.1em;
            border-radius: 10px;
            width: 80%;
            margin: 1vmin 0;
        }

        form label {
            font-size: 1.1em;
        }

        form button {
            color: #111;
            background-color: #fd532f;
            padding: 1.5vmin 2vmin;
            border-radius: 10px;
            font-size: 3vh;
            font-weight: bold;
            cursor: pointer;
            border: none;
        } 
        
        p {
            color: #818080;
            text-align: center;
            width: 70%;
        }

        h1 {
            color: #fd532f;
        }
    </style>
<body>
    <div id="main">

        <h1>Register</h1>
        <form action="/register" method="post">
            <input type="text" required name="fname" placeholder="First Name">
            <input type="text" required name="lname" placeholder="Last Name">
            <input type="email" required name="email" placeholder="Email">
            <input type="password" required name="password" placeholder="Password">
            <input type="password" required name="cnfpassword" placeholder="Confirm Password">
            <button type="submit">Submit</button>
        </form>
    </div>
</body>
</html>